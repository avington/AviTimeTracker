<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/js/lib/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/lib/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/site.js")" type="text/javascript"></script>
